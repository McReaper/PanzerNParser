Turret(Init){
*(Init)
	|Key(FU) & Key(FR) & !MyDir(NE) ? Turn(NE) : (Init)
	|Key(FD) & Key(FR) & !MyDir(SE) ? Turn(SE) : (Init)
	|Key(FD) & Key(FL) & !MyDir(SW) ? Turn(SW) : (Init)
	|Key(FU) & Key(FL) & !MyDir(NW) ? Turn(NW) : (Init)

	|Key(FL) & !MyDir(E) ? Turn(E) : (Init)
	|Key(FD) & !MyDir(S) ? Turn(S) : (Init)
	|Key(FR) & !MyDir(W) ? Turn(W) : (Init)
	|Key(FU) & !MyDir(N) ? Turn(N) : (Init)
	|Key(SPACE) ? Hit : (Init)   
	
	|True ? Wait : (Init)
}
